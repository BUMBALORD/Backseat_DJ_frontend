<h1 class="playlist-index"> <%= @current_user["user_name"] %>'s Playlist</h1>

<!-- Lists all the playlists for a user -->
<% @playlists.each do |playlist| %>
	<p><a href="http://localhost:9393/users/<%= @user %>/playlists/<%= playlist["id"] %>"><%= playlist["name"] %></a></p>
<%end%>

<!-- Form to create a new playlist -->
<form class="playlist-create" action="http://localhost:9393/users/<%=@user%>/playlists" method="POST">
  <input type="text" name="name" placeholder="Name">
  <input type="text" name="genre" placeholder="Genre">
  <input type="submit">
</form>