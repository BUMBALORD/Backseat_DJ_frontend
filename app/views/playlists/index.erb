<!-- Lists all the playlists for a user -->


<!-- Form to create a new playlist -->

<div class="main-container back_img debug">
            <div class="main wrapper clearfix debug">
              <h1 class="playlist-index font1 cent"> <%= @current_user["user_name"] %>'s Playlist</h1>
              <% @playlists.each do |playlist| %>
              <p class="font2 fontx2 cent"><a href="http://localhost:9393/users/<%= @user %>/playlists/<%= playlist["id"] %>/play"><%= playlist["name"] %></a></p>
              <%end%>
            </div>

            <div class="info">
              <form class="playlist-create cent" action="http://localhost:9393/users/<%=@user%>/playlists" method="POST">
              <input type="text" name="name" placeholder="Name">
              <input type="text" name="genre" placeholder="Genre">
              <input type="submit">
              </form>

            </div>
</div>

